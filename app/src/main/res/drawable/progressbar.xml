<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#1041627E"
                android:centerColor="#4041627E"
                android:centerY="0.6"
                android:endColor="#CC41627E"
                android:angle="180"
                />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip android:clipOrientation="horizontal" android:gravity="left">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#5041627E"
                    android:centerColor="#8041627E"
                    android:centerY="0.6"
                    android:endColor="#41627E"
                    android:angle="180"
                    />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip android:clipOrientation="horizontal" android:gravity="left">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#5041627E"
                    android:centerColor="#8041627E"
                    android:centerY="0.6"
                    android:endColor="#41627E"
                    android:angle="180"
                    />
            </shape>
        </clip>
    </item>
</layer-list>